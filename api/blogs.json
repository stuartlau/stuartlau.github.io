---
layout: null
permalink: /api/blogs.json
---
[
    {% assign pages = site.pages | where_exp: "item",
        "item.url contains '/blogs/tech/'" %
    }
{% assign posts = site.posts | where_exp: "item",
        "item.url contains '/blogs/tech/'" %
    }
{% assign all_entries = pages | concat: posts %
    }
{% assign sorted_entries = all_entries | sort: 'date' | reverse %
    }
{% assign has_output = false %
    }
{% for entry in sorted_entries %
    }
    {% if entry.title %
    }
    {% if has_output %
    },
    {% endif %
    }
    {
        "title": {
            { entry.title | jsonify
            }
        },
        "url": {
            { entry.url | relative_url | jsonify
            }
        },
        "date": "{{ entry.date | date: '%Y-%m-%d' }}",
        "subtitle": {
            { entry.subtitle | default: entry.description | default: '' | strip_html | strip_newlines | jsonify
            }
        },
        "tags": {
            { entry.tags | jsonify
            }
        }
    }
    {% assign has_output = true %
    }
    {% endif %
    }
{% endfor %
    }
]